<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/homeTeamScheuldeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orlęta Kielce"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/VSScheuldeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                tools:text=" vs " />

            <TextView
                android:id="@+id/awayTeamScheuldeTextViewtextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tęcza Gowarczów"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/dateOfMatchScheudleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.05.2018" />

            <TextView
                android:id="@+id/hourOfMatchScheudleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="godz. 15:00" />

        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>