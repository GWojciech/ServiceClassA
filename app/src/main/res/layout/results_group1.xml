<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabbed.group1.ResultsGroup1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/previousMatchdayResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/baseline_keyboard_arrow_left_black_18" />

            <TextView
                android:id="@+id/resultsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. kolejka"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nextMatchdayResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableStart="@drawable/baseline_keyboard_arrow_right_black_18" />

        </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/listViewResultsGroup1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>